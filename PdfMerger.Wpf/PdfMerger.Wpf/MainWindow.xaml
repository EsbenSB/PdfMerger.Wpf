<Window x:Class="PdfMerger.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Merger" Height="360" Width="520">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="PdfList" />

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <Button Content="Tilføj PDF’er" Width="110" Margin="5"
                    Click="AddFiles_Click"/>
            <Button Content="Flyt op" Width="80" Margin="5"
                    Click="MoveUp_Click"/>
            <Button Content="Flyt ned" Width="80" Margin="5"
                    Click="MoveDown_Click"/>
            <Button Content="Kombinér" Width="110" Margin="5"
                    Click="Merge_Click"/>
        </StackPanel>
    </Grid>
</Window>